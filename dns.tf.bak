# bootstrap
data "aws_route53_zone" "hosted_zone" {
  name         = "${local.domain}"
  #private_zone = true
}

resource "aws_route53_record" "bootstrap_record" {
  allow_overwrite = true
  name    = "${local.domain}"
  zone_id = aws_route53_zone.hosted_zone.zone_id

  type    = "A"
  ttl     = 300
  # TODO setup elastic IP
  #records = [aws_eip.lb.public_ip]
  records = []
}

